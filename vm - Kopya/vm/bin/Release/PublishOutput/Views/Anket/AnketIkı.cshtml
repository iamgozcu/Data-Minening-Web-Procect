</style>

<script type="text/javascript">
    $(function () {
        $(".soru1 button").click(function () {
            var soru = $(this).data("soru");
            var cevap = $(this).data("cevap");
            var auth = @DateTime.Now.ToString("dd-MM-yyyy-hh-mm-ss");
            var hh = $(this).index();

            $.ajax({
                type: "POST",
                url: "../Kısıler/SoruCevap",
                data: '{soru:"' + soru + '", cevap : "' + cevap + '", auth : "'+ auth +'"}',
                contentType: 'application/json; charset=utf-8',
                dataType: 'JSON',
                success: function (cevap) {
                    if (cevap == 1) {
                        $("body > div.container.body-content > div > div > button:nth-child("+(hh+1) +")").addClass("active");
                    } else {
                        alert("Bu soruya cevap verdiniz");
                    }
                }, error: function (cevap) {
                    alert("Ajax isteği başarısız...");
                }
            });

        })
    });
</script>


