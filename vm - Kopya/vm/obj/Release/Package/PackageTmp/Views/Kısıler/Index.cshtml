@model IEnumerable<vm.Models.Kisiler>

@{
    ViewBag.Title = "Create";
}

@ViewBag.HATA

<table class="table table-hover table-bordered ">
    <tr class="warning">

        <td>
            @Html.DisplayName("Okul Adı")
        </td>
        <td >
            @Html.DisplayName("Okul Numarası")
        </td>
        
    </tr>


    @foreach (var item in Model)
    {//bu döngü ile model içi ıtem da dönüyor if olsa dönmez o kadar
        <tr class="success">

            <td>
                @Html.DisplayFor(modelItem => item.OkulBlg.OkulAdı)
            </td>
            <td>
                <div style="margin-left:150px;">@Html.DisplayFor(modelItem => item.OkulNo)</div>
            </td>
        </tr>
        


    }
</table>

